<?xml version="1.0" encoding="UTF-8"?>
 
<installation version="1.0">
 
  <info>
    <appname>GVoD</appname>
    <appversion>1</appversion>
    <uninstaller write="no" />
    <javaversion>1.6</javaversion>
    <run-privileged/>
    <pack200 />
  </info>
 
  <guiprefs resizable="no" width="480" height="360">
    <laf name="looks">
      <param name="variant" value="windows" />
      <os family="windows" />
    </laf>
  </guiprefs>
 
  <locale>
    <langpack iso3="eng" />
  </locale>
 
  <resources>
    <res id="HTMLLicencePanel.licence" src="license.html"/>
    <res id="TargetPanel.dir" src="defaultInstallDir.txt" />
    <res id="ProcessPanel.Spec.xml" src="processPanelSpec.xml" />
  </resources>

  <panels>
    <panel classname="HelloPanel" />
    <panel classname="HTMLLicencePanel" />
    <panel classname="DefaultTargetPanel" />
    <panel classname="InstallPanel" />
    <panel classname="ProcessPanel" />
    <panel classname="SimpleFinishPanel" />
  </panels>
 
  <packs>
    <pack name="main" required="yes">
      <description>GVoD Files</description>
      <file src="license.html" targetdir="$INSTALL_PATH"/>
      <file src="gvod.exe" targetdir="$INSTALL_PATH"/>
      <file src="gvod.reg" targetdir="$INSTALL_PATH"/>
      <file src="reginstall.bat" targetdir="$INSTALL_PATH"/>
    </pack>
  </packs>
 
</installation>

